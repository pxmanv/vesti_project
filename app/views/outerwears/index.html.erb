<div class="page-header">
  <h1>Outerwears</h1>
</div>

<p><a href="/outerwears/new" class="btn btn-primary">Add a New Outerwear</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Designer</th>
      <th>Season</th>
      <th>Fit</th>
      <th>Color</th>
      <th>Fabric</th>
      <th>Occasion</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @outerwears.each do |outerwear| %>
      <tr>
        <td><%= outerwear.name.try(:name) %></td>
        <td><%= outerwear.designer.try(:designer) %></td>
        <td><%= outerwear.season.try(:season) %></td>
        <td><%= outerwear.fit.try(:fit) %></td>
        <td><%= outerwear.color.try(:color) %></td>
        <td><%= outerwear.fabric.try(:fabric) %></td>
        <td><%= outerwear.occasion.try(:occasion) %></td>
        <td><img src="<%= outerwear.image_url %>" width="30"></td>
        <td>
          <a href="/outerwears/<%= outerwear.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/outerwears/<%= outerwear.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_outerwear/<%= outerwear.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

