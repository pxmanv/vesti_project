<div class="page-header">
  <h1>Tops</h1>
</div>

<p><a href="/tops/new" class="btn btn-primary">Add a New Top</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Designer</th>
      <th>Season</th>
      <th>Fit</th>
      <th>Color</th>
      <th>Fabric</th>
      <th>Occasion</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tops.each do |top| %>
      <tr>
        <td><%= top.name.try(:name) %></td>
        <td><%= top.designer.try(:designer) %></td>
        <td><%= top.season.try(:season) %></td>
        <td><%= top.fit.try(:fit) %></td>
        <td><%= top.color.try(:color) %></td>
        <td><%= top.fabric.try(:fabric) %></td>
        <td><%= top.occasion.try(:occasion) %></td>
        <td><img src="<%= top.image_url %>" width="30"></td>
        <td>
          <a href="/tops/<%= top.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/tops/<%= top.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_top/<%= top.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

