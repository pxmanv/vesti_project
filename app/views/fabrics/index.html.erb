<div class="page-header">
  <h1>Fabrics</h1>
</div>

<p><a href="/fabrics/new" class="btn btn-primary">Add a New Fabric</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Fabric</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fabrics.each do |fabric| %>
      <tr>
        <td><%= fabric.fabric %></td>
        <td>
          <a href="/fabrics/<%= fabric.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/fabrics/<%= fabric.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_fabric/<%= fabric.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

