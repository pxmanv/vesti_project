<div class="page-header">
  <h1>Occasions</h1>
</div>

<p><a href="/occasions/new" class="btn btn-primary">Add a New Occasion</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Occasion</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @occasions.each do |occasion| %>
      <tr>
        <td><%= occasion.occasion %></td>
        <td>
          <a href="/occasions/<%= occasion.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/occasions/<%= occasion.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_occasion/<%= occasion.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

