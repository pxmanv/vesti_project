<div class="page-header">
  <h1>Shoes</h1>
</div>

<p><a href="/shoes/new" class="btn btn-primary">Add a New Shoe</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Designer</th>
      <th>Season</th>
      <th>Fit</th>
      <th>Color</th>
      <th>Fabric</th>
      <th>Occasion</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shoes.each do |shoe| %>
      <tr>
        <td><%= shoe.name_id %></td>
        <td><%= shoe.designer_id %></td>
        <td><%= shoe.season_id %></td>
        <td><%= shoe.fit_id %></td>
        <td><%= shoe.color_id %></td>
        <td><%= shoe.fabric_id %></td>
        <td><%= shoe.occasion_id %></td>
        <td>
          <a href="/shoes/<%= shoe.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/shoes/<%= shoe.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_shoe/<%= shoe.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

