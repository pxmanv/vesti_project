<% if @fit.errors.any? %>
  <% @fit.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Fit</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_fit" class="form-horizontal">
      <!-- Label and input for fit -->
      <div class="form-group">
        <label for="fit" class="col-sm-2 control-label">
          Fit
        </label>
        <div class="col-sm-10">
          <input type="text" id="fit" name="fit" placeholder="Fit" class="form-control" value="<%= @fit.fit %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Fit" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row">
