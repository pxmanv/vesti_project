<% if @designer.errors.any? %>
  <% @designer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Designer</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_designer" class="form-horizontal">
      <!-- Label and input for designer -->
      <div class="form-group">
        <label for="designer" class="col-sm-2 control-label">
          Designer
        </label>
        <div class="col-sm-10">
          <input type="text" id="designer" name="designer" placeholder="Designer" class="form-control" value="<%= @designer.designer %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Designer" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
