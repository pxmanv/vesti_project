<div class="page-header">
  <h1>Designers</h1>
</div>

<p><a href="/designers/new" class="btn btn-primary">Add a New Designer</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Designer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @designers.each do |designer| %>
      <tr>
        <td><%= designer.designer %></td>
        <td>
          <a href="/designers/<%= designer.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/designers/<%= designer.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_designer/<%= designer.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

