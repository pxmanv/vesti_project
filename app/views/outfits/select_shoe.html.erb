      <div class="row top-buffer">

       <div class="row">
        <div class="col-md-9">

          <% @shoes.each do |shoe| %>
          <div class="col-md-4">
            <div class="thumbnail">
              <img src="<%= shoe.image_url %>" alt="...">
              <div class="caption">
                <h6><%= shoe.designer.designer %> <%= shoe.name.name %></h6>
                <p>#<%= shoe.season.season.downcase %> #<%= shoe.fit.fit.downcase %> #<%= shoe.fabric.fabric.downcase %></p>
                <p><a href="/outfits/shoes/add?shoe_id=<%= shoe.id %>" class="btn btn-default" role="button">Select</a> </p>
              </div>
            </div>
          </div>
          <% end %>
        </div>

        <div class="col-md-3">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Current Selections</h3>
            </div>
            <div class="panel-body">

              <!-- Label and input for bottom_id -->
              <div class="form-group">
                <label for="top_id" class="col-sm-2 control-label">
                  Top
                </label>
                <div class="col-sm-7 col-sm-offset-2">
                  <input type="text" id="top_id" name="top_id" placeholder="ID" class="form-control" value="<%= @top_id %>">
                </div>
              </div>

              <!-- Label and input for bottom_id -->
              <div class="form-group">
                <label for="bottom_id" class="col-sm-2 control-label">
                  Bottom
                </label>
                <div class="col-sm-7 col-sm-offset-2">
                  <input type="text" id="bottom_id" name="bottom_id" placeholder="ID" class="form-control" value="<%= @bottom_id %>">
                </div>
              </div>

              <!-- Label and input for outerwear_id -->
              <div class="form-group">
                <label for="outerwear_id" class="col-sm-2 control-label">
                  Outerwear
                </label>
                <div class="col-sm-7 col-sm-offset-2">
                  <input type="text" id="outerwear_id" name="outerwear_id" placeholder="ID" class="form-control" value="<%= @outerwear_id %>">
                </div>
              </div>

              <!-- Label and input for accessory_id -->
              <div class="form-group">
                <label for="accessory_id" class="col-sm-2 control-label">
                  Accessory
                </label>
                <div class="col-sm-7 col-sm-offset-2">
                  <input type="text" id="accessory_id" name="accessory_id" placeholder="ID" class="form-control" value="<%= @accessory_id %>">
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <ul class="nav navbar-nav navbar-right">
            <form class="navbar-form navbar-left" role="search">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search for item...">
              </div>
              <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
            </form>
          </ul>
        </div>
      </div>
    </div>
  </div>
