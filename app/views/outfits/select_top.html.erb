      <div class="row top-buffer offset6">

        <div class="row">
          <div class="col-md-9">
            <% @tops.each do |top| %>
            <div class="col-md-3">
              <div class="thumbnail">
              <img src="<%= top.image_url %>" class="image-small" alt="...">
                <div class="caption">
                  <h6><%= top.designer.designer %> <%= top.name.name %></h6>
                  <p>#<%= top.season.season.downcase %> #<%= top.fit.fit.downcase %> #<%= top.color.color.downcase %> #<%= top.fabric.fabric.downcase %> #<%= top.occasion.occasion.downcase %></p>
                  <p><a href="/outfits/tops/add?top_id=<%= top.id %>" class="btn btn-default" role="button">Select</a> </p>
                </div>
              </div>
            </div>
            <% end %>
          </div>

          <div class="col-md-3">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Current Selections</h3>
              </div>
              <div class="panel-body">

                <% if @bottom.present? %>
                <div class="form-group">
                  <label for="bottom_id" class="col-sm-2 control-label">
                    Bottom
                  </label>
                  <div class="col-sm-7 col-sm-offset-2">
                    <input type="text" id="bottom_id" name="bottom_id" placeholder="ID" class="form-control" value="<%= @bottom.id %>">
                  </div>
                </div>
                <% else %>
                <div class="form-group">
                  <label for="bottom_id" class="col-sm-2 control-label">
                    Bottom
                  </label>
                  <div class="col-sm-7 col-sm-offset-2">
                    <input type="text" id="bottom_id" name="bottom_id" placeholder="ID" class="form-control" value="None">
                  </div>
                </div>
                <% end  %>

                <% if @outerwear.present? %>
                <div class="form-group">
                  <label for="outerwear_id" class="col-sm-2 control-label">
                    Outerwear
                  </label>
                  <div class="col-sm-7 col-sm-offset-2">
                    <input type="text" id="outerwear_id" name="outerwear_id" placeholder="ID" class="form-control" value="<%= @outerwear.id %>">
                  </div>
                </div>
                <% else %>
                <div class="form-group">
                  <label for="outerwear_id" class="col-sm-2 control-label">
                    Outerwear
                  </label>
                  <div class="col-sm-7 col-sm-offset-2">
                    <input type="text" id="outerwear_id" name="outerwear_id" placeholder="ID" class="form-control" value="None">
                  </div>
                </div>
                <% end  %>

                <% if @shoe.present? %>
                <div class="form-group">
                  <label for="shoe_id" class="col-sm-2 control-label">
                    Shoe
                  </label>
                  <div class="col-sm-7 col-sm-offset-2">
                    <input type="text" id="shoe_id" name="shoe_id" placeholder="ID" class="form-control" value="<%= @shoe.id %>">
                  </div>
                </div>
                <% else %>
                <div class="form-group">
                  <label for="shoe_id" class="col-sm-2 control-label">
                    Shoe
                  </label>
                  <div class="col-sm-7 col-sm-offset-2">
                    <input type="text" id="shoe_id" name="shoe_id" placeholder="ID" class="form-control" value="None">
                  </div>
                </div>
                <% end  %>

                <% if @accessory.present? %>
                <div class="form-group">
                  <label for="accessory_id" class="col-sm-2 control-label">
                    Accessory
                  </label>
                  <div class="col-sm-7 col-sm-offset-2">
                    <input type="text" id="accessory_id" name="accessory_id" placeholder="ID" class="form-control" value="<%= @accessory.id %>">
                  </div>
                </div>
                <% else %>
                <div class="form-group">
                  <label for="accessory_id" class="col-sm-2 control-label">
                    Accessory
                  </label>
                  <div class="col-sm-7 col-sm-offset-2">
                    <input type="text" id="accessory_id" name="accessory_id" placeholder="ID" class="form-control" value="None">
                  </div>
                </div>
                <% end  %>
              </div>
            </div>
            <ul class="nav navbar-nav navbar-right">
              <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Search for item...">
                </div>
                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
              </form>
            </ul>
          </div>
        </div>
      </body>
