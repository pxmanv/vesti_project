  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Dashboard</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-9">
          <div class="btn-group btn-group-justified">
            <div class="btn-group">
              <button type="button" class="btn btn-default">Tops</button>
            </div>
            <div class="btn-group">
              <button type="button" class="btn btn-default">Outerwear</button>
            </div>
            <div class="btn-group">
              <button type="button" class="btn btn-default">Bottoms</button>
            </div>
            <div class="btn-group">
              <button type="button" class="btn btn-default">Shoes</button>
            </div>
            <div class="btn-group">
              <button type="button" class="btn btn-default">Accessories</button>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              Clients <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">P. Christman</a></li>
              <li><a href="#">K. Lamar</a></li>
              <li><a href="#">K. West</a></li>
              <li><a href="#">A. Rocky</a></li>
              <li><a href="#">C. Gambino</a></li>
              <li><a href="#">T. Creator</a></li>
              <li><a href="#">K. Cudi</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row top-buffer">

      <% @tops.each do |top| %>
       <div class="col-md-3">
        <div class="thumbnail">
          <img src="<%= top.image_url %>" alt="...">
          <div class="caption">
            <h6><%= top.designer.designer %> <%= top.name.name %></h6>
            <p>#<%= top.fit.fit %> #wool #slim #soft</p>
            <p><a href="/outfits/tops/add?top_id=<%= top.id %>" class="btn btn-default" role="button">Select</a> </p>
          </div>
        </div>
      </div>
      <% end %>

      <div class="col-md-3">
        <ul class="nav navbar-nav navbar-right">
          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search for item...">
            </div>
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
          </form>
          </div>
        </div>
      </div>
    </body>
