<div class="page-header">
  <h1>Outfits</h1>
</div>

<p><a href="/outfits/new" class="btn btn-primary">Add a New Outfit</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Top</th>
      <th>Bottom</th>
      <th>Outerwear</th>
      <th>Shoe</th>
      <th>Accessory</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @outfits.each do |outfit| %>
    <tr>
      <td><img src="<%= outfit.top.image_url %>" width="100"></td>
      <td><img src="<%= outfit.bottom.image_url %>" width="100"></td>
      <td><img src="<%= outfit.outerwear.image_url %>" width="100"></td>
      <td><img src="<%= outfit.shoe.image_url %>" width="100"></td>
      <td><img src="<%= outfit.accessory.image_url %>" width="100"></td>

      <td>
        <a href="/outfits/<%= outfit.id %>" class="btn btn-primary">
          <i class="fa fa-search-plus"></i>
        </a>
      </td>
      <td>
        <a href="/outfits/<%= outfit.id %>/edit" class="btn btn-warning">
          <i class="fa fa-edit"></i>
        </a>
      </td>
      <td>
        <a href="/delete_outfit/<%= outfit.id %>" class="btn btn-danger">
          <i class="fa fa-trash-o"></i>
        </a>
      </td>
      <td>
        <form action="/feed">
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              Users
            </label>
            <div class="col-sm-10">
              <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email), :class => "form-control") %>
              <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </div>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

