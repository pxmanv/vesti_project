<div class="page-header">
  <h1>Colors</h1>
</div>

<p><a href="/colors/new" class="btn btn-primary">Add a New Color</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Color</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @colors.each do |color| %>
      <tr>
        <td><%= color.color %></td>
        <td>
          <a href="/colors/<%= color.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/colors/<%= color.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_color/<%= color.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

