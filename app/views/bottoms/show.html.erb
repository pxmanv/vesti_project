<div class="page-header">
  <h1>Bottom #<%= @bottom.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @bottom.name.try(:name) %></dd>

  <dt>Designer</dt>
  <dd><%= @bottom.designer.try(:designer) %></dd>

  <dt>Season</dt>
  <dd><%= @bottom.season.try(:season) %></dd>

  <dt>Fit</dt>
  <dd><%= @bottom.fit.try(:fit) %></dd>

  <dt>Color</dt>
  <dd><%= @bottom.color.try(:color) %></dd>

  <dt>Fabric</dt>
  <dd><%= @bottom.fabric.try(:fabric) %></dd>

  <dt>Occasion</dt>
  <dd><%= @bottom.occasion.try(:occasion) %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @bottom.image_url %>" width="250"></dd>

</dl>
