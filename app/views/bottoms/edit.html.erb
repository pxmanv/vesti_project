<% if @bottom.errors.any? %>
  <% @bottom.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Bottom #<%= @bottom.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_bottom/<%= @bottom.id %>" class="form-horizontal">
      <!-- Label and input for name_id -->
      <div class="form-group">
        <label for="name_id" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <%= select_tag(:name_id, options_from_collection_for_select(Name.all, :id, :name, @bottom.name_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for designer_id -->
      <div class="form-group">
        <label for="designer_id" class="col-sm-2 control-label">
          Designer
        </label>
        <div class="col-sm-10">
          <%= select_tag(:designer_id, options_from_collection_for_select(Designer.all, :id, :designer, @bottom.designer_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for season_id -->
      <div class="form-group">
        <label for="season_id" class="col-sm-2 control-label">
          Season
        </label>
        <div class="col-sm-10">
          <%= select_tag(:season_id, options_from_collection_for_select(Season.all, :id, :season, @bottom.season_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for fit_id -->
      <div class="form-group">
        <label for="fit_id" class="col-sm-2 control-label">
          Fit
        </label>
        <div class="col-sm-10">
          <%= select_tag(:fit_id, options_from_collection_for_select(Fit.all, :id, :fit, @bottom.fit_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for color_id -->
      <div class="form-group">
        <label for="color_id" class="col-sm-2 control-label">
          Color
        </label>
        <div class="col-sm-10">
          <%= select_tag(:Color_id, options_from_collection_for_select(Color.all, :id, :color, @bottom.color_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for fabric_id -->
      <div class="form-group">
        <label for="fabric_id" class="col-sm-2 control-label">
          Fabric
        </label>
        <div class="col-sm-10">
          <%= select_tag(:fabric_id, options_from_collection_for_select(Fabric.all, :id, :fabric, @bottom.fabric_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for occasion_id -->
      <div class="form-group">
        <label for="occasion_id" class="col-sm-2 control-label">
          Occasion
        </label>
        <div class="col-sm-10">
          <%= select_tag(:occasion_id, options_from_collection_for_select(Occasion.all, :id, :occasion, @bottom.occasion_id), :class => "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Bottom" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

