<% if @season.errors.any? %>
  <% @season.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Season #<%= @season.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_season/<%= @season.id %>" class="form-horizontal">
      <!-- Label and input for season -->
      <div class="form-group">
        <label for="season" class="col-sm-2 control-label">
          Season
        </label>
        <div class="col-sm-10">
          <input type="text" id="season" name="season" placeholder="Season" class="form-control" value="<%= @season.season %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Season" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row">
