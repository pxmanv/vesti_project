<div class="page-header">
  <h1>Seasons</h1>
</div>

<p><a href="/seasons/new" class="btn btn-primary">Add a New Season</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Season</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @seasons.each do |season| %>
      <tr>
        <td><%= season.season %></td>
        <td>
          <a href="/seasons/<%= season.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/seasons/<%= season.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_season/<%= season.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

